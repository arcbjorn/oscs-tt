{
  "name": "oscs-tt-server",
  "version": "0.1.0",
  "description": "Back-end service for The Open Source Computer Science time tracker",
  "author": "Oleg Luganskiy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:clean": "tsc --clean",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon dist/index.js",
    "watch:debug": "nodemon --inspect dist/index.js",
    "serve": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:node\"",
    "debug": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:debug\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "clean": "git clean -dfqX -- ./node_modules ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "docker-compose exec api yarn knex migrate:latest --knexfile ./src/db/knexfile.ts",
    "migrate:down": "docker-compose exec api yarn knex migrate:down --knexfile ./src/db/knexfile.ts",
    "migrate:rollback": "docker-compose exec api yarn knex migrate:rollback --all --knexfile ./src/db/knexfile.ts",
    "migrate:make": "docker-compose exec api yarn knex migrate:make --knexfile ./src/db/knexfile.ts",
    "seed": "docker-compose exec api yarn knex seed:run --knexfile ./src/db/knexfile.ts",
    "docker:sh": "sudo docker-compose exec server /bin/sh"
  },
  "dependencies": {
    "apollo-server": "^2.18.2",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.6",
    "objection": "^2.2.3",
    "pg": "^8.4.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
